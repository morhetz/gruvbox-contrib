<style-scheme id="gruvbox-light" _name="Gruvbox Light" version="1.0">
  <author>Jean-Patrick Guerrero</author>
  <author>Shiba</author>
  <_description>Dark color scheme using the Gruvbox color palette</_description>

  <!-- Gruvbox Palette -->
  <color name="dark0_hard"                  value="#1d2021"/>
  <color name="dark0"                       value="#282828"/>
  <color name="dark0_soft"                  value="#32302f"/>
  <color name="dark1"                       value="#3c3836"/>
  <color name="dark2"                       value="#504945"/>
  <color name="dark3"                       value="#665c54"/>
  <color name="dark4"                       value="#7c6f64"/>

  <color name="gray"                        value="#928374"/>

  <color name="light0_hard"                 value="#f9f5d7"/>
  <color name="light0"                      value="#fbf1c7"/>
  <color name="light0_soft"                 value="#f2e5bc"/>
  <color name="light1"                      value="#ebdbb2"/>
  <color name="light2"                      value="#d5c4a1"/>
  <color name="light3"                      value="#bdae93"/>
  <color name="light4"                      value="#a89984"/>

  <color name="bright_red"                  value="#fb4934"/>
  <color name="bright_green"                value="#b8bb26"/>
  <color name="bright_yellow"               value="#fabd2f"/>
  <color name="bright_blue"                 value="#83a598"/>
  <color name="bright_purple"               value="#d3869b"/>
  <color name="bright_aqua"                 value="#8ec07c"/>
  <color name="bright_orange"               value="#fe8019"/>

  <color name="neutral_red"                 value="#cc241d"/>
  <color name="neutral_green"               value="#98971a"/>
  <color name="neutral_yellow"              value="#d79921"/>
  <color name="neutral_blue"                value="#458588"/>
  <color name="neutral_purple"              value="#b16286"/>
  <color name="neutral_aqua"                value="#689d6a"/>
  <color name="neutral_orange"              value="#d65d0e"/>

  <color name="faded_red"                   value="#9d0006"/>
  <color name="faded_green"                 value="#79740e"/>
  <color name="faded_yellow"                value="#b57614"/>
  <color name="faded_blue"                  value="#076678"/>
  <color name="faded_purple"                value="#8f3f71"/>
  <color name="faded_aqua"                  value="#427b58"/>
  <color name="faded_orange"                value="#af3a03"/>

  <!-- Global Settings -->
  <style name="text"                        foreground="dark1" background="light0"/>
  <style name="selection"                   foreground="dark1" background="light3"/>
  <style name="cursor"                      foreground="dark1"/>
  <style name="current-line"                background="light1"/>
  <style name="line-numbers"                foreground="light4" background="light0"/>
  <style name="current-line-number"         background="light0"/>
  <style name="bracket-match"               background="light3" bold="true"/>
  <style name="bracket-mismatch"            foreground="light0" background="faded_red" bold="true"/>
  <style name="right-margin"                foreground="dark4" background="dark4"/>
  <style name="draw-spaces"                 foreground="light2"/>
  <style name="background-pattern"          background="#faedb7"/>

  <style name="search-match"                foreground="light0" background="faded_yellow"/>
  <style name="misspelled-match"            foreground="dark1" background="faded_red"/>

  <!-- Comment group -->
  <style name="def:comment"                 foreground="gray" italic="true"/>

  <!-- Constant group -->
  <style name="def:constant"                foreground="faded_purple"/>
  <style name="def:string"                  foreground="faded_green"/>
  <style name="def:special-char"            foreground="faded_orange"/>

  <!-- Identifier group -->
  <style name="def:identifier"              foreground="faded_blue"/>
  <style name="def:function"                foreground="faded_green" bold="true"/>
  <style name="def:builtin"                 foreground="faded_orange"/>

  <!-- Type group -->
  <style name="def:type"                    foreground="faded_yellow"/>

  <!-- Statement group -->
  <style name="def:statement"               foreground="faded_red"/>
  <style name="def:operator"                foreground="faded_purple"/>

  <!-- Markup group -->
  <style name="def:emphasis"                foreground="dark3" italic="true"/>
  <style name="def:strong-emphasis"         foreground="dark3" bold="true"/>
  <style name="def:inline-code"             foreground="faded_aqua"/>
  <style name="def:insertion"               underline="single"/>
  <style name="def:deletion"                strikethrough="true"/>
  <style name="def:link-text"               foreground="gray" underline="true"/>
  <style name="def:link-destination"        foreground="faded_purple"/>
  <style name="def:heading"                 foreground="faded_green" bold="true"/>
  <style name="def:thematic-break"          foreground="gray"/>
  <style name="def:preformatted-section"    foreground="faded_aqua"/>
  <style name="def:list-marker"             foreground="gray"/>

  <!-- Others -->
  <style name="def:preprocessor"            foreground="faded_aqua"/>
  <style name="def:error"                   foreground="light0" background="faded_red" bold="true" />
  <style name="def:warning"                 foreground="light0" background="faded_yellow" bold="true"/>
  <style name="def:note"                    foreground="dark1" bold="true"/>
  <style name="def:net-address"             underline="true"/>

  <!-- C -->
  <style name="c:storage-class"             foreground="faded_orange"/>

  <!-- CSS -->
  <style name="css:symbol"                  foreground="faded_blue"/>
  <style name="css:block-delimiter"         foreground="faded_blue"/>
  <style name="css:test-delimiter"          foreground="faded_aqua"/>
  <style name="css:color"                   foreground="faded_blue"/>
  <style name="css:function"                foreground="faded_yellow"/>
  <style name="css:property-name"           foreground="faded_orange"/>
  <style name="css:at-rule-operator"        foreground="faded_red"/>
  <style name="css:id-selector"             foreground="faded_orange"/>
  <style name="css:class-selector"          foreground="faded_green"/>
  <style name="css:type-selector"           foreground="dark1"/>
  <style name="css:universal-selector"      foreground="faded_red"/>
  <style name="css:pseudo-selector"         foreground="faded_aqua"/>

  <!-- Diff -->
  <style name="diff:added-line"             foreground="faded_green"/>
  <style name="diff:removed-line"           foreground="faded_red"/>
  <style name="diff:changed-line"           foreground="faded_aqua"/>
  <style name="diff:special-case"           foreground="faded_purple"/>
  <style name="diff:location"               foreground="faded_blue"/>
  <style name="diff:diff-file"              foreground="faded_orange"/>

  <!-- Gutter -->
  <style name="gutter:added-line"           foreground="faded_green"/>
  <style name="gutter:changed-line"         foreground="faded_aqua"/>
  <style name="gutter:removed-line"         foreground="faded_red"/>

  <!-- JSON -->
  <style name="json:keyname"                foreground="faded_green"/>
  <style name="json:string"                 foreground="dark1"/>

  <!-- Lua -->
  <style name="lua:function"                foreground="faded_blue"/>
  <style name="lua:reserved"                foreground="faded_blue"/>

  <!-- Python -->
  <style name="python:module-handler"       foreground="faded_blue"/>
  <style name="python:function-name"        foreground="faded_aqua"/>
  <style name="python:class-name"           foreground="faded_aqua"/>

  <!-- sh -->
  <style name="sh:variable"                 foreground="faded_aqua"/>
  <style name="sh:variable-definition"      foreground="faded_blue"/>
  <style name="sh:subshell"                 foreground="faded_orange"/>

  <!-- XML -->
  <style name="xml:attribute-name"          foreground="faded_orange"/>

</style-scheme>
